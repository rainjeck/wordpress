@import '../setup/vars.styl';
@import '../setup/mixins.styl';

/*!
  ADMIN
  ===============================================
*/

input[name="post_name"]
  width: 100%


/*! --- TERM -------------------------- */
.term-php
  .cmb2-metabox
    border: 1px solid #e5e5e5;
    background-color: #fff;

  .cmb-row
    padding-left: 12px
    padding-right: 12px

    .cmb-th
      width: 18%

      @media all and (max-width: 520px)
        width: 95%
        padding-bottom: 0

    .cmb-td
      width: 80%;
      padding-left: 0
      padding-right: 0
      @media all and (max-width: 520px)
        width: 95%
        padding-top: 0


/*! --- FIELDS ------------------------ */
.cmb-type-group
  .cmb-repeat-group-field
    padding-top: 0;

  .cmb-row
    padding-bottom: 5px;

  .cmb-th
    @media phone
      width: 100%;

    &+.cmb-td
      @media phone
        width: 100%;



/*! --- COLUMNS ----------------------- */
.column-thumbnail
  width: 50px
  @media screen and (max-width: 782px)
    display: none;

  &:before
    display: none !important;

  &-link
    display: block
    width: 100%

  &-pic
    background-repeat: no-repeat
    background-size: contain
    background-position: center
    max-height: 50px

    .img, img
      width: 100%
      max-height: 50px
      max-width: 100%


.column-management,
.column-investments
  width: 155px


.column-pid
  width:40px


.column-order
  width: 84px
  text-align: center
  @media screen and (max-width: 782px)
    display: none;


.column-order.manage-column
  font-size: 0.9em


.tools_page_tnwpt_regenerate_thumbs
  .submit
    display: none;
